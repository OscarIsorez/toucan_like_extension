{
    "manifest_version": 2,
    "name": "Passive Chinese Immersion",
    "version": "1.0",
    "description": "Learn Chinese naturally while browsing the web",
    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "web_accessible_resources": [
        "hsk/*.json"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ]
}